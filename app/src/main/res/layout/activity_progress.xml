<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressActivity"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="9dp">

        <ProgressBar
            android:id="@+id/pb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp" />

        <ProgressBar
            android:id="@+id/pb2"
            style="@android:style/Widget.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp" />

        <ProgressBar
            android:id="@+id/pb3"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:paddingTop="20dp" />

        <ProgressBar
            android:id="@+id/pb4"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:paddingTop="20dp"
            android:progress="10"
            android:secondaryProgress="30" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="模拟进度"></Button>

        <ProgressBar
            android:id="@+id/pb5"
            style="@android:style/Widget.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress_style"
            android:paddingTop="20dp" />

        <Button
            android:id="@+id/btn_progress_dialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress_dialog1" />

        <Button
            android:id="@+id/btn_progress_dialog2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progress_dialog2" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>